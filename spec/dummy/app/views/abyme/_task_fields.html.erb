<div class="default-partial border-solid border-2 rounded border-grey-300 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal p-8 mb-5">
  <div class="flex align-center justify-between">
    <div class="w-1/2 p-6">
	    <div class="field mb-4">
        <%= f.text_field :title, 
                    class: 'text-4xl font-bold mb-4 w-full', 
                    label: false,
                    placeholder: 'Task title...' %>
        
      </div>

	    <div class="field mb-4">
        <%= f.text_area :description, 
                    class: 'field mb-4 w-full',
                    label: false,
                    placeholder: 'Task description...' %>
                    
      </div>

      <%= f.hidden_field :_destroy %>

      <%= remove_association(tag: :div) do %>
        <i id="remove-task" class="fas fa-trash text-4xl text-gray-400 hover:text-grey-800 cursor-pointer"></i>
      <% end %>
    </div>
    <div class="w-1/2 border-solid border-2 rounded border-gray-300 p-2">
      <%= abymize(:comments, f, min_count: 1) %>
    </div>
  </div>
</div>
